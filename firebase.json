{
  "hosting": [
    {
      "target": "leilaoouro",
      "public": "frontend/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "redirects": [
        {
          "source": "/api/**",
          "type": 301,
          "destination": "https://leilao-ouro.onrender.com/api/**"
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
